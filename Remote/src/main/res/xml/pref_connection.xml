<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory
        android:title="Connection Mode">


    <ListPreference
            android:icon="@android:drawable/ic_menu_preferences"
        android:key="connection_type"
        android:title="@string/pref_title_connection"
        android:defaultValue="0"
        android:entries="@array/pref_connect_list_titles"
        android:entryValues="@array/pref_connect_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <com.mobilejohnny.multiwiiremote.remote.BluetoothDeviceListPreference
            android:icon="@android:drawable/stat_sys_data_bluetooth"
            android:key="device_name"
            android:title="Bluetooth Device"
            />

    <EditTextPreference
            android:icon="@android:drawable/ic_menu_upload"
        android:key="host"
        android:selectAllOnFocus="true"
        android:title="@string/pref_title_host"
        android:defaultValue="127.0.0.1"
        android:inputType="textUri"
        android:singleLine="true"
        android:maxLines="1"
        />

    <EditTextPreference
            android:icon="@android:drawable/ic_menu_directions"
            android:key="port"
            android:selectAllOnFocus="true"
            android:title="@string/pref_title_port"
            android:inputType="number"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="6"
            android:defaultValue="8080"
            />

</PreferenceCategory>
</PreferenceScreen>
